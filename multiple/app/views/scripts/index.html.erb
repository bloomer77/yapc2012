<h1>問題一覧</h1>
<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Dir</th>
      <th>Best script</th>
      <th>Recent best score</th>
    </tr>
  </thead>
  <tbody>
  <% @dirs.each do |dir| %>
      <tr>
        <td>
          <%= link_to dir.dir, '/dir/' + dir.dir %>
        </td>
        <td>
          <%= dir.file %>
        </td>
        <td style="text-align: right;">
          <%= '%0.5f' % dir.recent %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>